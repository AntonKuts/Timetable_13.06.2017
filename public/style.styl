$white = #ffffff
$black = #000000
$grey = #adadad
$brown = #262424
$pink = #a89292
$iphone = "only screen and (max-width: 320px)";
$phoneSE = "only screen and (max-width: 400px)";
$phone = "only screen and (max-width: 480px)";
$phoneAl = "only screen and (max-width: 600px)";
$tablet = "only screen and (max-width: 768px)";
$ultra1 = "only screen and (max-width: 992px)";
$tabletW = "only screen and (max-width: 990px)";
$ultra = "only screen and (max-width: 1024px)";
$s1100 = "only screen and (max-width: 1100px)";
$s1200 = "only screen and (max-width: 1280px)";
$s1360 = "only screen and (max-width: 1360px)";
$laptop = "only screen and (max-width: 1400px)";
$laptop1 = "only screen and (max-width: 1440px)";
*
    box-sizing border-box
    outline none
body
    font-family 'Open Sans', sans-serif
    background-color $white
a
    text-decoration none
ul
    list-style none

h1,h2,h3,h4,h5,h6,p,span,ul
    padding 0
    margin 0
    text-align center
li
    list-style none
    display inline-block
nav
    text-align center
span
    color red
    padding-left 230px
    @media $phone
        color blue
        padding-left 50px
p
    color red
    font-size 14px
    @media $phone
        color blue
        font-size 10px


$floatL = left
$marg0 = 0
.main
    display table
    margin auto
    text-align center
    &_text
      color #cce6fa
      font-size 60px
    &_input
      height 40px
      width 500px
      border 1px solid #cce6fa
      color #cce6fa
.input2
    float $floatL
    margin $marg0
    height 30px
    width 30px
    borderRadius 30px
    color rgb(200, 47, 47)
.task_style
    float $floatL
    margin $marg0
    width 60px
.p_style
    float $floatL
    margin $marg0
    width 60px
.button_style
    float $floatL
    margin $marg0
    border 1px solid black
.complited
    text-decoration: line-through;
